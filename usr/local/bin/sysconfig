#!/bin/bash
# Written By Seeker for StormFish OS/Storm OS
# Forked and Inspired by Xerolinux-Tool

id=$(echo $[($RANDOM % ($[10000 - 32000] + 1)) + 10000] )
echo "$id"

yad --plug="$id" --tabnum=1 --columns=2 --form \
--field="<b>Visit The StormOS Site (Soon to Change Hosts)</b>":fbtn "xdg-open https://storm-os.godaddysites.com" \
--field="<b>Visit The StormOS Sourceforge Site for Direct Downloads and Info on StormOS</b>":fbtn "xdg-open https://sourceforge.net/projects/hackman-linux/files/" \
--field="<b>Or Visit The StormFish OS Site</b>":fbtn "xdg-open https://sourceforge.net/projects/stormfish-os/" \
--field="<b>StormOS ReadMe</b>":fbtn '/usr/local/bin/data/about' \
--field="<b>Step 1. Visit us and Join The StormOS/StormFishOS Discord Channel</b>":fbtn "xdg-open https://discord.gg/36JkjDVUP9" \
--field="Reserved:BTN" "eom" &> /tmp/data1 &

yad --plug="$id" --tabnum=2 --columns=2 --form \
--field="<b>Step 1. System Updates</b>":FBTN "gnome-terminal -e 'sudo apt update -y'" \
--field="<b>Step 2. Install Teamviewer</b>":FBTN "gnome-terminal -e 'tinstall'" \
--field="<b>Step 3. Lshw for System Info to Txt</b>":FBTN "gnome-terminal -e 'lshwinfo'" \
--field="<b>Step 4. Installation of Nvidia-Dkms after that reboot</b>":FBTN "gnome-terminal -e  'sudo apt install -y nvidia-driver-510'" \
--field="<b>Step 5. (Optional) Blank your Screen/s select here </b>":FBTN "gnome-terminal -e 'blankscreen'" \
--field="Reserved:BTN" "eom" &> /tmp/data2 &



yad --plug="$id" --tabnum=3 --columns=2 --form \
--field="<b>Install Steam Native</b>":fbtn "gnome-terminal -e 'sudo dpkg --add-architecure i386'" \
--field="<b>Install Steam Native</b>":fbtn "gnome-terminal -e 'sudo apt install -y steam:i386 gamemode gamemode:i386'" \
--field="<b>Install Heroic Launcher</b>":fbtn "gnome-terminal -e 'sudo apt install -y heroic-games-launcher-bin gamemode'" \
--field="<b>Install Lutris Launcher</b>":fbtn "gnome-terminal -e 'sudo apt install -y lutris gamemode'" \
--field="<b>Install Bottles Launcher</b>":fbtn "gnome-terminal -e 'sudo gdebi bottles'" \
--field="<b>Install Lshw</b>":FBTN "gnome-terminal -e  'sudo apt install -y lshw'" \
--field="Reserved:BTN" "eom" &> /tmp/data3 &



yad --plug="$id" --tabnum=4 --columns=2 --form \
--field="<b>Step 1.Enable Cups/Printer</b>":fbtn "gnome-terminal -e 'systemctl enable --now cups'" \
--field="<b>Step 2. Cups/Printer Web Interface</b>":fbtn "xdg-open http://127.0.0.1:631" \
--field="<b>Epson Drivers</b>":fbtn "gnome-terminal -e 'epsoninstaller'" \
--field="Reserved":btn "eom" &> /tmp/data4 &


yad --plug="$id" --tabnum=5 --columns=2 --form \
--field="<b>Distrowatch</b>":fbtn "xdg-open https://distrowatch.com" \
--field="<b>Merchandise Store</b>":fbtn "xdg-open https://ebuzz-central.creator-spring.com/" \
--field="<b>Gofund.me Page</b>":fbtn "xdg-open https://gofund.me/d954872d" \
--field="<b>Patreon Page</b>":fbtn "xdg-open https://patreon.com/benfitzpatrick" &> /tmp/data5 &


yad --notebook --key="$id" --center --tab-pos=top  --width=480 --height=175 --tab="<b>(1).Welcome</b>" --tab="<b>(2).Maintenance/Updates/Support</b>" --tab="<b>(3).Game/Utilities Installs</b>" --tab="<b>(4).Cups/Printer Drivers</b>"  --tab="<b>(5).Donations/Merchandise</b>"  --image=/usr/share/icons/scalable/apps/stormos.png \
--title="Storm OS Maintenance and Utilities Program v2.0.0.15" \
--text="<b>Greetings $USER Use this Utility tool to Maintain and Upgrade your Storm OS</b>" \
--justify=center \
--button="Logout":"xfce4-session-logout" \
--button="System Info Lshw":"gnome-terminal -H -x sudo lshw -short" \
--button="System Resources":"gnome-terminal -H -x top" \
--button="Update Maintenance Program":"gnome-terminal -e 'utilityup'" \
--button="Launch Terminal":"gnome-terminal" \
--button="Launch Browser":"firefox" \
--button="Exit" \



#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png"  \

case $? in
    0)
    exit;;
    1)
    exit;;
    70)
    exit;;
    252)
    exit;;
esac


#StormOS." --image=/usr/share/icons/scalable/apps/stormos.png  \
